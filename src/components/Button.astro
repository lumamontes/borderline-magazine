---
export interface Props {
  variant?: 'primary' | 'secondary' | 'accent' | 'outline-accent';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  target?: string;
  class?: string;
  onClick?: string;
  id?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  target,
  class: className = '',
  onClick,
  id
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2';

const variantClasses = {
  primary: 'theta-btn-primary focus:ring-blue-500',
  secondary: 'theta-btn-secondary focus:ring-blue-500',
  accent: 'theta-btn-accent focus:ring-green-500',
  'outline-accent': 'theta-btn-outline-accent focus:ring-green-500'
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;

const Element = href ? 'a' : 'button';
---
<Element
  class={classes}
  href={href}
  target={target}
  onclick={onClick}
  id={id}
  aria-label={!Astro.slots.default && "BotÃ£o"} 
  {...(Element === 'button' && { type: 'button' })}
>
  <slot />
</Element>
