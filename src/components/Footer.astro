---
import { Image } from 'astro:assets';
import logoImage from '../assets/logo.png';
import SocialMedia from './SocialMedia.astro';
import InstagramIcon from '../assets/instagram.png';
import TwitterIcon from '../assets/twitter.png';

export interface Props {
  lang?: 'pt' | 'en';
}

const { lang } = Astro.props;
---

<footer class="bg-white border-t border-gray-200">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <!-- Brand Section -->
      <div>
        <div class="flex items-center mb-4">
          <Image 
            src={logoImage} 
            alt="Borderline Magazine" 
            width={32}
            height={32}
            class="h-8 w-auto mr-3"
          />
          <div>
            <h3 class="text-xl font-bold theta-text-primary">Borderline Magazine</h3>
          </div>
        </div>
        <p class="text-gray-600 text-sm leading-relaxed mb-6 max-w-sm">
          Independent magazine covering culture, art, and ideas.
        </p>
        
        <!-- Social Media Links -->
        <div class="flex gap-4 mb-4">
          <a href="https://www.instagram.com/_theborderline_/" target="_blank" rel="noopener noreferrer" 
              class="text-gray-600 hover:theta-text-primary transition-colors w-8 h-8 flex items-center justify-center">
            <Image src={InstagramIcon} alt="Instagram" width={32} height={32}/>
          </a>
          <a href="https://x.com/_theborderline_" target="_blank" rel="noopener noreferrer"
              class="text-gray-600 hover:theta-text-primary transition-colors w-8 h-8 flex items-center justify-center">
            <Image src={TwitterIcon} alt="Twitter/X" width={32} height={32} />
          </a>
        </div>
      </div>

      <!-- Support Links -->
      <div>
        <h4 class="text-sm font-semibold theta-text-primary mb-4 uppercase tracking-wide">Navigate</h4>
        <ul class="space-y-3">
          <li><a href="/magazine" class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200">Magazines</a></li>
          <li><a href="/zine" class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200">Zine</a></li>
          <li><a href="/about" class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200">About</a></li>
          <!-- <li><a href="/blog" class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200 flex items-center gap-1">Blog <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" /><path d="M5 5a2 2 0 00-2 2v6a2 2 0 002 2h6a2 2 0 002-2v-2a1 1 0 10-2 0v2H5V7h2a1 1 0 000-2H5z" /></svg></a></li> -->
          <li><a href="/contact" class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200">Contact</a></li>
        </ul>
      </div>

      <!-- Contact & Social -->
      <div>
        <h4 class="text-sm font-semibold theta-text-primary mb-4 uppercase tracking-wide">Contact</h4>
        <ul class="space-y-3 mb-4">
          <li>
            <a href="mailto:theborderline21@gmail.com" class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200 flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
              theborderline21@gmail.com
            </a>
          </li>
        </ul>
        <div class="flex flex-col sm:flex-row gap-2 sm:gap-3 mt-4">
          <a href="https://www.instagram.com/_theborderline_/" target="_blank" rel="noopener noreferrer" 
              class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200 flex items-center gap-2">
            <Image src={InstagramIcon} alt="Instagram" width={20} height={20}/>
            <span>Instagram</span>
          </a>
          <a href="https://x.com/_theborderline_" target="_blank" rel="noopener noreferrer"
              class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200 flex items-center gap-2">
            <Image src={TwitterIcon} alt="Twitter/X" width={20} height={20} />
            <span>Twitter/X</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-200 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-col md:flex-row justify-between items-center text-xs text-gray-500">
        <div class="mb-2 md:mb-0">
          Â© 2025 The Borderline Magazine. All rights reserved.
        </div>
        <div class="flex items-center space-x-4">
          <span>Developed in Brazil</span>
          <a href="mailto:theborderline21@gmail.com?subject=Bug Report - Borderline Magazine" class="theta-text-primary hover:underline">Report a Bug</a>
        </div>
      </div>
    </div>
  </div>
</footer> 
