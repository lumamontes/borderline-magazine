      <div>
        <div class="flex items-center mb-4">
          <Image 
            src={logoImage} 
            alt="ThetaHarpia" 
            width={32}
            height={32}
            class="h-8 w-auto mr-3"
          />
          <div>
            <h3 class="text-xl font-bold theta-text-primary">ThetaHarpia</h3>
          </div>
        </div>
        <p class="text-gray-600 text-sm leading-relaxed mb-6 max-w-sm">
          Sistema de gestão para psicólogos e médicos.
        </p>
        
        <!-- Social Media Links -->
        <SocialMedia/>
      </div>

      <!-- Support Links -->
      <div>
        <h4 class="text-sm font-semibold theta-text-primary mb-4 uppercase tracking-wide">Suporte</h4>
        <ul class="space-y-3">
          <li><a href="/sobre" class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200">Sobre Nós</a></li>
          <li><a href="https://blog.thetaharpia.com" target="_blank" class="text-sm text-gray-600 hover:theta-text-primary transition-colors duration-200 flex items-center gap-1">Blog <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" /><path d="M5 5a2 2 0 00-2 2v6a2 2 0 002 2h6a2 2 0 002-2v-2a1 1 0 10-2 0v2H5V7h2a1 1 0 000-2H5z" /></svg></a></li>
