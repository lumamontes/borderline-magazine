---
// Logo component with customizable size variants
export interface Props {
  variant?: 'mobile' | 'desktop';
  className?: string;
  showLogo?: boolean;
}

const { variant = 'desktop', className = '', showLogo = false } = Astro.props;
---

<a href="/" class={`flex items-center group ${className}`}>
  <div class="text-left z-10 group-hover:opacity-80 transition-opacity duration-300">
    {!showLogo && (
      <>
      {variant === 'mobile' ? (
        <>
          <h1 class="text-3xl md:text-4xl font-bold lowercase inknut-antiqua-bold text-gray-900 leading-tight">the borderline</h1>
          <h2 class="text-base md:text-lg font-light  lowercase text-gray-700">literary magazine</h2>
        </>
      ) : (
        <>
          <h1 class="text-3xl font-bold lowercase inknut-antiqua-bold text-gray-900 leading-tight">the borderline</h1>
          <h2 class="text-xl font-light  lowercase text-gray-700">literary magazine</h2>
        </>
      )}
      </>
    )}
  </div>
</a>
