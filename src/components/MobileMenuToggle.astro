---
export interface Props {
  isOpen?: boolean;
  className?: string;
}

const { isOpen = false, className = '' } = Astro.props;
---

<button 
  id="menu-toggle"
  class={`flex flex-col gap-1.5 p-3 rounded-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300 transition-all duration-200 ${className}`}
  aria-label="Toggle mobile navigation menu"
  aria-expanded={isOpen}
  aria-controls="mobile-menu"
>
  <span 
    class="w-6 h-0.5 bg-gray-800 transition-all duration-300"
    style={isOpen ? 'transform: rotate(45deg) translateY(8px);' : 'transform: rotate(0);'}
  ></span>
  <span 
    class="w-6 h-0.5 bg-gray-800 transition-all duration-300"
    style={isOpen ? 'opacity: 0;' : 'opacity: 1;'}
  ></span>
  <span 
    class="w-6 h-0.5 bg-gray-800 transition-all duration-300"
    style={isOpen ? 'transform: rotate(-45deg) translateY(-8px);' : 'transform: rotate(0);'}
  ></span>
</button>
