---
	import ReadNow from './ReadNow.astro';
import Header from './Header.astro';
import SocialMedia from './SocialMedia.astro';
---

<main class="min-h-screen w-full bg-white relative overflow-hidden font-sans">
	<!-- Main Content -->
	<Header variant={'transparent'} showLogo={true} />

	<section class="relative h-[85vh] flex flex-col items-center justify-center p-8 max-w-7xl mx-auto">
		<div class="absolute top-0 left-0 w-full z-20"></div>
		<div class="absolute inset-0 bg-grid-slate-100 bg-cover bg-center bg-no-repeat z-0 pointer-events-none" 
		     role="img" 
		     aria-label="Decorative background pattern"></div>
		
		<!-- Hero Content -->
		<header class="text-center z-10 max-w-lg mx-auto">
			<h1 class="p-0 text-5xl md:text-6xl font-bold mb-1 lowercase inknut-antiqua-bold typewriter bg-[#FCEDD2]">
				the borderline
			</h1>
			<h2 class="text-2xl md:text-4xl font-light mb-4 lowercase bg-[#FCEDD2]">
				literary magazine
			</h2>
			<p class="text-sm text-gray-600 italic">Since 2021</p>
		</header>
		
		<!-- Social Media Links -->
		<SocialMedia />
	</section>
	
	<!-- Magazine Preview Section -->
	<ReadNow />
</main>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap');
	
	.post-it-font {
		font-family: 'Kalam', cursive;
	}

	/* Organic Shake Animation */
	.hover-shake {
		transition: transform 0.3s ease;
		animation: gentleWiggle 3s ease-in-out infinite;
	}

	.hover-shake:hover {
		animation: organicShake 0.6s ease-in-out;
	}

	/* Gentle continuous wiggle like wind */
	@keyframes gentleWiggle {
		0% { transform: translate(0, 0) rotate(0deg); }
		20% { transform: translate(0.8px, 0.4px) rotate(0.25deg); }
		40% { transform: translate(-0.6px, 0.5px) rotate(-0.2deg); }
		60% { transform: translate(0.4px, -0.3px) rotate(0.15deg); }
		80% { transform: translate(-0.3px, 0.2px) rotate(-0.1deg); }
		100% { transform: translate(0, 0) rotate(0deg); }
	}

	@keyframes organicShake {
		0% { transform: translate(0, 0) rotate(0deg); }
		10% { transform: translate(-1px, -1px) rotate(-0.5deg); }
		20% { transform: translate(1px, -1px) rotate(0.5deg); }
		30% { transform: translate(-1px, 1px) rotate(-0.3deg); }
		40% { transform: translate(1px, 1px) rotate(0.3deg); }
		50% { transform: translate(-0.5px, -0.5px) rotate(-0.2deg); }
		60% { transform: translate(0.5px, -0.5px) rotate(0.2deg); }
		70% { transform: translate(-0.5px, 0.5px) rotate(-0.1deg); }
		80% { transform: translate(0.5px, 0.5px) rotate(0.1deg); }
		90% { transform: translate(-0.2px, -0.2px) rotate(-0.05deg); }
		100% { transform: translate(0, 0) rotate(0deg); }
	}

	/* Typewriter Animation */
	.typewriter {
		overflow: hidden;
		border-right: 2px solid #111827;
		white-space: nowrap;
		animation: typing 2.5s steps(13, end), blink-caret 0.75s step-end infinite;
		animation-delay: 0.5s;
	}

	@keyframes typing {
		from { width: 0; }
		to { width: 100%; }
	}

	@keyframes blink-caret {
		from, to { border-color: transparent; }
		50% { border-color: #111827; }
	}

  .bg-grid-slate-100 {
    background-image: url('../assets/hero-bg.png');
		background-size: cover;
		background-position: center center;
		background-repeat: no-repeat;
  }

</style>