---
	import ReadNow from './ReadNow.astro';
	import Header from './Header.astro';
	import SocialMedia from './SocialMedia.astro';
	import heroBg from '../assets/hero-bg.png';
	import HeroImg from '../assets/hero.png';
import { Image } from 'astro:assets';
---

<main class="min-h-screen w-full bg-white relative overflow-hidden font-sans">
	<!-- Main Content -->
	<Header variant={'transparent'} showLogo={true} />

	<section class=" flex flex-col items-center justify-center min-h-[70vh] ">
		<!-- Hero Content -->
		<header class="text-center max-w-[500px] mx-auto px-4">
			<Image src={HeroImg} alt="The Borderline Literary Magazine" class="organicShake hover-shake w-full h-auto object-cover rounded-sm " />
			<h1 class="p-0 text-4xl sm:text-5xl font-bold mb-1 lowercase inknut-antiqua-bold ">
				the borderline
			</h1>
			<h2 class="text-xl sm:text-2xl md:text-4xl font-light mb-4 lowercase bg-[#FCEDD2]">
				literary magazine
			</h2>
			<p class="text-xs sm:text-sm text-gray-600 italic">Since 2021</p>
		</header>
		
		<!-- Social Media Links -->
		<SocialMedia />
	</section>
	
	<!-- Magazine Preview Section -->
	<ReadNow />
</main>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap');
	
	.post-it-font {
		font-family: 'Kalam', cursive;
	}

/* Organic Shake Animation */
.hover-shake {
	transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
	animation: gentleFloat 6s cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite;
	will-change: transform;
}

.hover-shake:hover {
	animation: elegantHover 3s cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite;
	transform: scale(1.05);
}

/* Subtle floating motion - barely noticeable but adds life */
@keyframes gentleFloat {
	0%, 100% { 
		transform: translateY(0px) rotate(0deg); 
	}
	33% { 
		transform: translateY(-3px) rotate(0.5deg); 
	}
	66% { 
		transform: translateY(-1px) rotate(-0.5deg); 
	}
}

/* Clean hover state with subtle movement */
@keyframes elegantHover {
	0%, 100% { 
		transform: scale(1.05) translateY(0px) rotate(0deg); 
	}
	50% { 
		transform: scale(1.05) translateY(-2px) rotate(0.3deg); 
	}
}

	/* Typewriter Animation */
	.typewriter {
		overflow: hidden;
		border-right: 2px solid #111827;
		white-space: nowrap;
		animation: typing 2.5s steps(13, end), blink-caret 0.75s step-end infinite;
		animation-delay: 0.5s;
	}

	@keyframes typing {
		from { width: 0; }
		to { width: 100%; }
	}

	@keyframes blink-caret {
		from, to { border-color: transparent; }
		50% { border-color: #111827; }
	}


</style>