---
import Header from '../components/Header.astro';
import LayoutHeader from '../layouts/LayoutHeader.astro';
import { AboutPageContent } from '../components/AboutPageContent';
import Hero from '@/components/Hero.astro';
import Mission from '@/components/Mission.astro';
import MeetTheTeam from '@/components/MeetTheTeam.astro';
import { MeetTheTeamSection } from '@/components/about/MeetTheTeamSection';
import ContactForm from '@/components/ContactForm';
