import Note from '@/components/about/Note.astro';
import CallToAction from '@/components/CallToAction.astro';
const seoData = {
	title: "About The Borderline Literary Magazine - Our Mission & Team",
	description: "Learn about The Borderline Literary Magazine's mission to draw rich and collaborative 'borderlines' of connection within the litmag community through inventive publications and projects. Meet our team and discover our story since 2021.",
	image: "/about.png",
	keywords: "about borderline literary magazine, literary magazine team, litmag mission, creative writing community, literary publication history, emerging writers support, established writers platform, print digital magazine",
	type: "website",
	section: "About"
};

// Additional structured data for about page
const aboutStructuredData = {
	"@context": "https://schema.org",
	"@type": "AboutPage",
	"name": "About The Borderline Literary Magazine",
	"description": "Learn about The Borderline Literary Magazine's mission to draw rich and collaborative 'borderlines' of connection within the litmag community through inventive publications and projects.",
