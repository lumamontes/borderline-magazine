---
import Header from '../components/Header.astro';
import ReadNow from '../components/ReadNow.astro';
import SocialMedia from '../components/SocialMedia.astro';
import VolumeCover1 from '../assets/magazines/volume1/cover.png';
import VolumeCover4 from '../assets/magazines/volume4/pages/Volume IV FINAL - January 2023-01.png';
import VolumeCover5 from '../assets/magazines/volume5/pages/Volume V FINAL - October 2023-01.png';
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import CactusImg from '../assets/cactus.svg';
import BannerImg from '../assets/banner.png';
import CatImg from '../assets/cat.png';
import { ParallaxLayer } from '@/components/animations/ParallaxLayer';
import IntroVideo from '../assets/video.mp4';
import Footer from '@/components/Footer.astro';
const seoData = {
	title: "The Borderline Literary Magazine - Explore. Create. Inspire.",
	description: "The Borderline Literary Magazine - A platform for emerging and established writers and artists. Since 2021, we've been drawing rich and collaborative 'borderlines' of connection within the litmag community through inventive publications and projects.",
	image: "/logo.png",
	keywords: "literary magazine, creative writing, poetry, fiction, art, literature, emerging writers, established writers, print magazine, digital magazine, literary community, The Borderline, litmag",
	type: "website"
};

// Additional structured data for homepage
const homepageStructuredData = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": "The Borderline Literary Magazine",
	"url": "https://borderlinelitmag.com",
	"description": "A literary magazine platform for emerging and established writers and artists, creating collaborative connections within the litmag community through inventive publications and projects.",
	"publisher": {
		"@type": "Organization",
		"name": "The Borderline Literary Magazine",
		"foundingDate": "2021",
		"logo": "https://borderlinelitmag.com/logo.png"
	},
	"potentialAction": {
		"@type": "SearchAction",
		"target": "https://borderlinelitmag.com/magazine?q={search_term_string}",
		"query-input": "required name=search_term_string"
	},
	"mainEntity": {
		"@type": "Organization",
		"name": "The Borderline Literary Magazine",
		"alternateName": "Borderline LitMag",
		"url": "https://borderlinelitmag.com",
		"logo": "https://borderlinelitmag.com/logo.png",
		"description": "A literary magazine platform for emerging and established writers and artists, creating collaborative connections within the litmag community through inventive publications and projects.",
		"foundingDate": "2021",
		"sameAs": [
			"https://twitter.com/borderlinelitmag",
			"https://instagram.com/borderlinelitmag"
		],
		"knowsAbout": [
			"Creative Writing",
			"Poetry",
			"Fiction",
			"Visual Art",
			"Literary Community",
			"Print Magazine",
			"Digital Magazine",
			"Emerging Writers",
			"Established Writers"
		]
	}
};
---

<Layout {...seoData}>
	<main >
		<!-- Header -->
		<Header  />

		<!-- Hero Section: Editorial Layout -->
		<section class="relative min-h-screen lg:h-screen bg-[#FBF1DE] border-b border-[#000000]">
			<!-- Subtle paper texture overlay -->
			<div class="absolute inset-0 opacity-[0.03] bg-paper-texture pointer-events-none"></div>
			
			<div class="w-full h-full flex flex-col lg:flex-row">
				<!-- Mobile: Full screen content -->
				<div class="lg:hidden w-full min-h-screen flex flex-col justify-center px-6 py-20 space-y-8">
					<!-- Masthead -->
						<header class="space-y-6 pt-8">
						<div class="space-y-2 text-left  mx-auto"> 
							<h1 class="font-title italic text-6xl sm:text-5xl font-light tracking-tight text-[#1A1A1A] leading-[0.85]">
								THE
							</h1>
							<h2 class="font-title font-bold text-6xl sm:text-5xl tracking-tight text-[#1A1A1A] leading-[0.85]">
								BORDER-
							</h2>
							<h2 class="font-title text-6xl sm:text-5xl font-bold tracking-tight text-[#1A1A1A] leading-[0.85]">
								LINE
							</h2>
						</div>
						<!-- <Image src={CacstusImg} alt="Cactus" class="mx-auto w-1/3 object-contain" /> -->
						<h3 class="font-lato text-sm sm:text-base font-semibold tracking-[0.3em] text-[#1A1A1A] leading-tight">
							LITERARY MAGAZINE
						</h3>
					</header>

					<!-- Mobile Quote -->
					<div class="bg-black rounded-lg p-5 mx-autos">
						<p class="font-azeret-mono text-white text-center text-sm leading-relaxed">
							Inventive publications, collaborative projects and a space for the spaces in between.
						</p>
					</div>

					<!-- Mobile Image -->
					<div class="relative w-full aspect-[4/3] rounded-lg overflow-hidden">
						<Image src={BannerImg} alt="Banner" class="w-full h-full object-cover" />
					</div>
					
					
					<!-- Editorial CTAs -->
					<div class="flex flex-col gap-4 px-4">
						<a 
							href="/magazine" 
							class="group inline-flex items-center justify-center px-8 py-4 bg-[#1A1A1A] text-[#FEFEFE] text-base font-medium tracking-wide uppercase letter-spacing-[0.1em] border border-[#1A1A1A] hover:bg-[#2A2A2A] transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-[#D4AF37] focus:ring-offset-2 focus:ring-offset-[#FEFEFE]"
						>
							<span class="group-hover:tracking-[0.15em] transition-all duration-300">Current Issue</span>
						</a>
						
						<a 
							href="/about" 
							class="group inline-flex items-center justify-center px-8 py-4 bg-transparent text-[#1A1A1A] text-base font-medium tracking-wide uppercase letter-spacing-[0.1em] border border-[#1A1A1A] hover:bg-[#1A1A1A] hover:text-[#FEFEFE] transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-[#D4AF37] focus:ring-offset-2 focus:ring-offset-[#FEFEFE]"
						>
							<span class="group-hover:tracking-[0.15em] transition-all duration-300">About</span>
						</a>
					</div>
				</div>

				<!-- Desktop: Left Column: Editorial Content -->
				<div class="hidden lg:flex lg:w-1/2 flex-col justify-center px-6 sm:px-8 lg:px-12 py-12 sm:py-16 lg:py-20 space-y-8 sm:space-y-10">
					<!-- Masthead -->
					<header class="space-y-3 sm:space-y-4">
						<div class="flex items-baseline justify-start">
							<h1 class="font-title italic text-5xl sm:text-6xl md:text-7xl lg:text-9xl font-light tracking-tight text-[#1A1A1A] leading-[0.85]">
								THE
							</h1>
						</div>
						<div class="flex items-center gap-3 sm:gap-4">
							<h2 class="font-title font-bold text-5xl sm:text-6xl md:text-7xl lg:text-9xl tracking-tight text-[#1A1A1A] leading-[0.85]">
								BORDER-
							</h2>
							<div class="h-[1px] flex-1 bg-[#E5E5E5]"></div>
						</div>
						<div class="flex items-center gap-3 sm:gap-4">
							<h2 class="font-title text-5xl sm:text-6xl md:text-7xl lg:text-9xl font-bold tracking-tight text-[#1A1A1A] leading-[0.85]">
								LINE
							</h2>
							<Image src={CactusImg} alt="Cactus" class="flex-1 object-contain w-10 h-10 md:w-full md:h-full " />
						</div>

						<div class="flex items-center justify-start pt-4 sm:pt-6">
							<h3 class="font-lato text-lg sm:text-xl md:text-2xl lg:text-3xl font-medium  tracking-[0.65em] text-[#1A1A1A] leading-tight text-center">
								LITERARY MAGAZINE
							</h3>
						</div>
					</header>
					
					<!-- Editorial CTAs -->
					<div class="flex flex-col sm:flex-row gap-5 sm:gap-6">
						<a 
							href="/magazine" 
							class="group inline-flex items-center justify-center px-8 sm:px-10 py-4 sm:py-5 bg-[#1A1A1A] text-[#FEFEFE] text-base sm:text-lg font-medium tracking-wide uppercase letter-spacing-[0.1em] border border-[#1A1A1A] hover:bg-[#2A2A2A] transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-[#D4AF37] focus:ring-offset-2 focus:ring-offset-[#FEFEFE]"
						>
							<span class="group-hover:tracking-[0.15em] transition-all duration-300">Current Issue</span>
						</a>
						
						<a 
							href="/about" 
							class="group inline-flex items-center justify-center px-8 sm:px-10 py-4 sm:py-5 bg-transparent text-[#1A1A1A] text-base sm:text-lg font-medium tracking-wide uppercase letter-spacing-[0.1em] border border-[#1A1A1A] hover:bg-[#1A1A1A] hover:text-[#FEFEFE] transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-[#D4AF37] focus:ring-offset-2 focus:ring-offset-[#FEFEFE]"
						>
							<span class="group-hover:tracking-[0.15em] transition-all duration-300">About</span>
						</a>
					</div>
				</div>

				<!-- Desktop: Right Column: Image and Text Overlay -->
				<div class="hidden lg:flex lg:w-1/2 relative flex-col">
					<div class="flex-1 relative">
						<Image src={BannerImg} alt="Banner" class="w-full h-full object-cover" />
					</div>
					<!-- Full Black Section with Text -->
					<div class="bg-black flex items-center  px-8 py-16">
						<p class="font-azeret-mono text-white text-xl lg:text-3xl font-light leading-relaxed">
							Inventive publications, collaborative projects and a space for the spaces in between.
						</p>
					</div>
				</div>
			</div>
		</section>

		<section class="relative md:min-h-screen lg:h-screen bg-[#FBF1DE]">
			<!-- Subtle paper texture overlay -->
			<div class="absolute inset-0 opacity-[0.03] bg-paper-texture pointer-events-none"></div>
			
			<div class="w-full h-full flex flex-col lg:flex-row">
				<!-- Mobile: Full screen content -->
				<div class="lg:hidden w-full flex flex-col px-6 py-12 space-y-8">
					<!-- FREE label -->
					<div class="flex items-center justify-between"> 
						<h2 class="font-title font-bold text-3xl sm:text-4xl tracking-tight text-[#1A1A1A] leading-[0.85]">
							MINI ZINE
						</h2>
						<span class="font-azeret-mono text-lg font-light tracking-wide px-4 py-2 rounded-full">
							FREE
						</span>
					</div>

					<!-- Mobile Image -->
					<div class="relative w-full aspect-square max-w-sm mx-auto rounded-lg overflow-hidden">
						<Image src={CatImg} alt="Mini Zine" class="w-full h-full object-cover" />
					</div>

					<!-- Content -->
					<header class="space-y-6 text-center">
						
						<h3 class="font-lato text-lg sm:text-xl font-medium text-[#1A1A1A] leading-tight">
							Reflections and aspirations
						</h3>
						<p class="font-azeret-mono text-base sm:text-lg font-light leading-relaxed">
							(2025-2026)
						</p>
					</header>
					
					<!-- Editorial CTAs -->
					<div class="flex flex-col gap-4 px-4">
						<a 
							href="/zine" 
							class="group inline-flex items-center justify-center px-8 py-4 bg-transparent text-[#1A1A1A] text-base font-medium tracking-wide uppercase letter-spacing-[0.1em] border border-[#1A1A1A] hover:bg-[#1A1A1A] hover:text-[#FEFEFE] transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-[#D4AF37] focus:ring-offset-2 focus:ring-offset-[#FEFEFE]"
						>
							<span class="group-hover:tracking-[0.15em] transition-all duration-300">Explore</span>
						</a>
					</div>
				</div>

				<!-- Desktop: Left Column: Image -->
				<div class="hidden lg:flex lg:w-1/2 relative flex-col">
					<div class="flex-1 relative">
						<Image src={CatImg} alt="Banner" class="w-full h-full object-cover" />
					</div>
				</div>

				<!-- Desktop: Right Column: Content -->
				<div class="hidden lg:flex lg:w-1/2 flex-col justify-between px-6 sm:px-8 lg:px-12 py-12 sm:py-16 lg:py-20 space-y-8 sm:space-y-10">
					<!-- Masthead -->
					<div class="flex items-center justify-end font-azeret-mono text-xl font-light leading-relaxed">
						FREE 
					</div>
					<header class="space-y-3 sm:space-y-4">
						<div class="flex items-center gap-3 sm:gap-4">
							<h2 class="font-title font-bold text-5xl sm:text-6xl md:text-7xl lg:text-9xl tracking-tight text-[#1A1A1A] leading-[0.85]">
								MINI ZINE
							</h2>
						</div>
						<div class="flex items-center justify-start pt-4 sm:pt-6">
							<h3 class="font-lato text-xl sm:text-3xl md:text-4xl lg:text-5xl font-medium   text-[#1A1A1A] leading-tight text-center">
								Reflections and aspirations
							</h3>
						</div>
						<div class="flex items-center justify-start pt-4 sm:pt-6">
							<p class="font-azeret-mono text-xl sm:text-3xl  font-light leading-relaxed">
									(2025-2026)
							</p>
						</div>
					</header>
					
					<!-- Editorial CTAs -->
					<div class="flex flex-col sm:flex-row gap-5 sm:gap-6">
						<a 
							href="/zine" 
							class="group inline-flex items-center justify-center px-8 sm:px-10 py-4 sm:py-5 bg-transparent text-[#1A1A1A] text-base sm:text-lg font-medium tracking-wide uppercase letter-spacing-[0.1em] border border-[#1A1A1A] hover:bg-[#1A1A1A] hover:text-[#FEFEFE] transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-[#D4AF37] focus:ring-offset-2 focus:ring-offset-[#FEFEFE]"
						>
							<span class="group-hover:tracking-[0.15em] transition-all duration-300">Explore</span>
						</a>
					</div>
				</div>
			</div>
		</section>

		<section class="relative min-h-screen lg:h-screen bg-[#82BD99]">
			<!-- Subtle paper texture overlay -->
			<div class="absolute inset-0 opacity-[0.03] bg-paper-texture pointer-events-none"></div>
			
			<div class="w-full h-full flex flex-col lg:flex-row">
				<!-- Mobile: Full screen content -->
				<div class="lg:hidden w-full min-h-screen flex flex-col justify-around px-6 py-10 space-y-8">
					<!-- Content -->
					<header class="space-y-6 text-center">
						<h2 class="font-title font-bold text-3xl sm:text-4xl tracking-tight text-[#1A1A1A] leading-[0.85]">
							Want to get involved?
						</h2>
						<p class="font-lato text-lg sm:text-xl font-medium text-[#FBF1DE] leading-tight">
							We'd love to hear from you. Send us a message with questions (or just to say hi) and we will get in touch!
						</p>
					</header>
<!-- Editorial CTAs -->
					<div class="flex flex-col gap-4 px-4">
						<a 
							href="/contact" 
							class="group inline-flex items-center justify-center px-8 py-4 bg-[#1A1A1A] text-[#FEFEFE] text-base font-medium tracking-wide uppercase letter-spacing-[0.1em] border border-[#1A1A1A] hover:bg-[#2A2A2A] transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-[#D4AF37] focus:ring-offset-2 focus:ring-offset-[#FEFEFE]"
						>
							<span class="group-hover:tracking-[0.15em] transition-all duration-300">Send message</span>
						</a>
					</div>
					<!-- Mobile Video -->
					<div class="relative w-full rounded-lg overflow-hidden">
						<video src={IntroVideo} class="w-full h-full object-cover" playsinline muted loop autoplay />
					</div>
					
					
				</div>

				<!-- Desktop: Left Column: Content -->
				<div class="hidden lg:flex lg:w-3/4 flex-col justify-center px-6 sm:px-8 lg:px-12 py-12 sm:py-16 lg:py-20 space-y-8 sm:space-y-10">
					<!-- Masthead -->
					<header class="space-y-3 sm:space-y-4">
						<div class="flex items-center gap-3 sm:gap-4">
							<h2 class="font-title font-bold text-5xl sm:text-6xl md:text-7xl lg:text-9xl tracking-tight text-[#1A1A1A] leading-[0.85]">
								Want to get involved?
							</h2>
							<div class="h-[1px] flex-1 bg-[#E5E5E5]"></div>
						</div>
						<div class="flex items-center justify-start pt-4 sm:pt-6">
							<p class="font-lato text-lg sm:text-xl md:text-2xl lg:text-3xl font-medium   text-[#FBF1DE] leading-tight text-left">
								We'd love to hear from you. Send us a message with questions (or just to say hi) and we will get in touch!
							</p>
						</div>
					</header>
					
					<!-- Editorial CTAs -->
					<div class="flex flex-col sm:flex-row gap-5 sm:gap-6">
						<a 
							href="/contact" 
							class="group inline-flex items-center justify-center px-8 sm:px-10 py-4 sm:py-5 bg-[#1A1A1A] text-[#FEFEFE] text-base sm:text-lg font-medium tracking-wide uppercase letter-spacing-[0.1em] border border-[#1A1A1A] hover:bg-[#2A2A2A] transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-[#D4AF37] focus:ring-offset-2 focus:ring-offset-[#FEFEFE]"
						>
							<span class="group-hover:tracking-[0.15em] transition-all duration-300">Send message</span>
						</a>
					</div>
				</div>

				<!-- Desktop: Right Column: Video -->
				<div class="hidden lg:flex lg:w-1/2 relative flex-col">
					<div class="flex-1 relative">
						<video src={IntroVideo} class="w-full h-full object-cover"  playsinline muted loop autoplay />
					</div>
				</div>
			</div>
		</section>
		<section class="relative min-h-screen lg:h-screen bg-black">
			<!-- Subtle paper texture overlay -->
			<div class="absolute inset-0 opacity-[0.03] bg-paper-texture pointer-events-none"></div>
			
			<div class="w-full h-full flex flex-col lg:flex-row">
				<!-- Mobile: Full screen content -->
				<div class="lg:hidden w-full min-h-screen flex flex-col justify-center px-6 py-20 space-y-8">
					<!-- Content -->
					<div class="text-center space-y-6">
						<div class="text-gray-400 text-xs uppercase tracking-[0.2em] font-medium">
							OUR VOLUMES
						</div>
						<h2 class="text-white text-2xl sm:text-3xl font-light leading-tight">
							Our literary magazine past volumes, available to read online now in a digital flipbook format.
						</h2>
					</div>

					<!-- Mobile Magazine Covers - Simplified Stack -->
					<div class="relative w-full max-w-sm mx-auto h-[400px]">
						<!-- Primary Volume Cover -->
						<div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-[200px] shadow-xl z-30">
							<Image 
								src={VolumeCover5} 
								alt="The Borderline - Poetry, Prose, Photography & Visual Art" 
								class="w-full h-auto object-cover rounded-lg"
								loading="eager"
							/>
						</div>
						
						<!-- Secondary Volume Cover -->
						<div class="absolute top-[80px] left-[20px] w-[160px] transform rotate-[-5deg] shadow-lg z-20">
							<Image 
								src={VolumeCover4} 
								alt="Dreaming in the Dark - Poetry, Prose, Visual Art" 
								class="w-full h-auto object-cover rounded-lg"
								loading="eager"
							/>
						</div>
						
						<!-- Tertiary Volume Cover -->
						<div class="absolute top-[80px] right-[20px] w-[140px] transform rotate-[5deg] shadow-lg z-10">
							<Image 
								src={VolumeCover1} 
								alt="The Underline - Literary Magazine" 
								class="w-full h-auto object-cover rounded-lg"
								loading="eager"
							/>
						</div>
					</div>
					
					<!-- CTA -->
					<div class="flex justify-center px-4">
						<a 
							href="/magazine" 
							class="inline-block px-8 py-4 bg-transparent text-white text-base font-medium tracking-wider uppercase border-2 border-white hover:bg-white hover:text-black transition-all duration-300"
						>
							Read now
						</a>
					</div>
				</div>

				<!-- Desktop: Left Column: Text Content -->
				<div class="hidden lg:flex lg:w-1/2 flex-col justify-center px-12 lg:px-20 py-20">
					<div class="max-w-xl">
						<h2 class="text-white text-4xl lg:text-5xl font-light leading-tight mb-12">
							Our literary magazine past volumes, available to read online now in a digital flipbook format.
						</h2>
						
						<!-- Current Issue Button -->
						<a 
							href="/magazine" 
							class="inline-block px-10 py-4 bg-transparent text-white text-sm font-medium tracking-wider uppercase border-2 border-white hover:bg-white hover:text-black transition-all duration-300"
						>
							Read now
						</a>
					</div>
				</div>
		
				<!-- Desktop: Right Column: Magazine Covers -->
				<div class="hidden lg:flex lg:w-1/2 relative items-center justify-center">
					<div class="relative w-full max-w-2xl h-[600px]">
						<!-- Header text -->
						<div class="absolute top-8 left-8 text-gray-500 text-xs uppercase tracking-[0.2em] font-medium">
							OUR VOLUMES
						</div>
						
						<!-- Primary Volume Cover - The Borderline -->
						<div class="absolute top-20 right-12 w-[300px] transform rotate-[2deg] shadow-2xl hover:shadow-3xl transition-all duration-500 hover:rotate-[1deg] hover:scale-[1.02] z-30">
							<Image 
								src={VolumeCover5} 
								alt="The Borderline - Poetry, Prose, Photography & Visual Art" 
								class="w-full h-auto object-cover"
								loading="eager"
							/>
						</div>
						
						<!-- Secondary Volume Cover - Dreaming in the Dark -->
						<div class="absolute top-[180px] left-8 w-[240px] transform -rotate-[3deg] shadow-xl hover:shadow-2xl transition-all duration-500 hover:rotate-[-2deg] hover:scale-[1.02] z-20">
							<Image 
								src={VolumeCover4} 
								alt="Dreaming in the Dark - Poetry, Prose, Visual Art" 
								class="w-full h-auto object-cover"
								loading="eager"
							/>
						</div>
						
						<!-- Tertiary Volume Cover - The Underline -->
						<div class="absolute bottom-12 right-[100px] w-[200px] transform rotate-[4deg] shadow-lg hover:shadow-xl transition-all duration-500 hover:rotate-[3deg] hover:scale-[1.02] z-10">
							<Image 
								src={VolumeCover1} 
								alt="The Underline - Literary Magazine" 
								class="w-full h-auto object-cover"
								loading="eager"
							/>
						</div>
						
						<!-- Volume IV label -->
						<div class="absolute top-[160px] right-[140px] bg-white/90 px-3 py-1 rounded">
							<span class="text-xs font-medium text-gray-700">VOLUME IV</span>
							<span class="block text-[10px] text-gray-500">October 2023</span>
						</div>
					</div>
				</div>
			</div>
		</section>
		<Footer />
	</main>
	
	<!-- Additional structured data for homepage -->
	<script type="application/ld+json" set:html={JSON.stringify(homepageStructuredData)}></script>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Inknut+Antiqua:wght@300;400;500;600;700&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap');
	
	:global(.font-title) {
		font-family: 'Playfair Display', serif !important;
	}

	:global(.font-lato) {
		font-family: 'Lato', sans-serif !important;
	}

	:global(.font-azeret-mono) {
		font-family: 'Azeret Mono', monospace !important;
	}

	/* Editorial Typography */
	.inknut-antiqua-light { font-family: 'Inknut Antiqua', serif; font-weight: 300; }
	.inknut-antiqua-regular { font-family: 'Inknut Antiqua', serif; font-weight: 400; }
	.inknut-antiqua-bold { font-family: 'Inknut Antiqua', serif; font-weight: 700; }
	
	/* Letter spacing utilities */
	.letter-spacing-wide { letter-spacing: 0.05em; }
	.letter-spacing-\[0\.1em\] { letter-spacing: 0.1em; }
	.letter-spacing-\[0\.15em\] { letter-spacing: 0.15em; }
	.letter-spacing-\[0\.2em\] { letter-spacing: 0.2em; }

	/* Paper texture effect */
	.bg-paper-texture {
		background-image: 
			radial-gradient(circle at 1px 1px, rgba(26,26,26,0.1) 1px, transparent 0);
		background-size: 20px 20px;
	}

	/* Editorial Spread Container */
	.editorial-spread {
		transform-style: preserve-3d;
		perspective: 1000px;
	}

	/* Magazine animations for different sizes */
	.magazine-primary {
		transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
		animation: editorialFloat1 12s cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite;
		will-change: transform;
	}

	.magazine-secondary {
		transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
		animation: editorialFloat2 14s cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite 2s;
		will-change: transform;
	}

	.magazine-tertiary {
		transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
		animation: editorialFloat3 16s cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite 4s;
		will-change: transform;
	}

	/* Sophisticated floating animations with different patterns */
	@keyframes editorialFloat1 {
		0%, 100% { 
			transform: translateY(0px) rotate(0deg) scale(1); 
		}
		25% { 
			transform: translateY(-3px) rotate(0.2deg) scale(1.005); 
		}
		50% { 
			transform: translateY(-1px) rotate(-0.1deg) scale(1.002); 
		}
		75% { 
			transform: translateY(-2px) rotate(0.15deg) scale(1.003); 
		}
	}

	@keyframes editorialFloat2 {
		0%, 100% { 
			transform: translateY(0px) rotate(0deg) scale(1); 
		}
		30% { 
			transform: translateY(-2px) rotate(-0.15deg) scale(1.003); 
		}
		60% { 
			transform: translateY(-4px) rotate(0.1deg) scale(1.004); 
		}
		80% { 
			transform: translateY(-1px) rotate(-0.05deg) scale(1.001); 
		}
	}

	@keyframes editorialFloat3 {
		0%, 100% { 
			transform: translateY(0px) rotate(0deg) scale(1); 
		}
		20% { 
			transform: translateY(-1px) rotate(0.1deg) scale(1.002); 
		}
		45% { 
			transform: translateY(-3px) rotate(-0.08deg) scale(1.003); 
		}
		70% { 
			transform: translateY(-2px) rotate(0.12deg) scale(1.001); 
		}
	}

	/* Progressive enhancement for editorial spread */
	@media (prefers-reduced-motion: no-preference) {
		.editorial-spread {
			animation: editorialSpreadFadeIn 1.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) ease-out;
		}
		
		.editorial-spread > div:nth-child(1) {
			animation-delay: 0.2s;
		}
		
		.editorial-spread > div:nth-child(2) {
			animation-delay: 0.4s;
		}
		
		.editorial-spread > div:nth-child(3) {
			animation-delay: 0.6s;
		}
	}

	@keyframes editorialSpreadFadeIn {
		from {
			opacity: 0;
			transform: translateY(30px) scale(0.9);
		}
		to {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}

	/* Accessibility: Honor reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		.magazine-float {
			animation: none !important;
		}
		
		.magazine-preview {
			animation: none !important;
		}
		
		.magazine-preview:hover .magazine-float {
			animation: none !important;
			transform: none !important;
		}
	}

	/* Enhanced focus states for accessibility */
	a:focus-visible {
		outline: 2px solid #D4AF37 !important;
		outline-offset: 2px !important;
		border-radius: 2px !important;
	}

	/* Subtle text selection styling */
	::selection {
		background-color: #D4AF37;
		color: #1A1A1A;
	}

	::-moz-selection {
		background-color: #D4AF37;
		color: #1A1A1A;
	}

	/* Print styles for editorial content */
	@media print {
		.magazine-preview,
		.magazine-float {
			animation: none !important;
			transform: none !important;
		}
	}
</style>