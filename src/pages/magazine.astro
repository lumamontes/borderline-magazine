---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import Header from "../components/Header.astro";
import LayoutHeader from "../layouts/LayoutHeader.astro";
import AboutHeaderHero from "../components/AboutHeaderHero.astro";
import { Marquee } from "@/components/ui/marquee";
import MeetTheTeam from "@/components/MeetTheTeam.astro";
import MagazineSearch from "../components/MagazineSearch.astro";
import MagazineImg from "../assets/magazine.png";

// Get all magazines from content collections
const allMagazines = await getCollection("magazines");
const magazines = allMagazines.sort((a, b) => a.data.volume - b.data.volume);

// SEO data
const seoTitle = "Magazine Collection | Borderline Litmag";
const seoDescription = "Explore our collection of literary magazines featuring visual arts, poetry, and prose from creatives around the globe. Read past volumes and discover new voices.";
const baseURL = Astro.site || "http://localhost:4321";
const canonicalURL = new URL("/magazine", baseURL);

// Structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": seoTitle,
  "description": seoDescription,
  "url": canonicalURL.toString(),
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": magazines.map((magazine, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "CreativeWork",
        "name": magazine.data.title,
        "description": magazine.data.description,
        "url": `/magazine/${magazine.slug}`,
        "datePublished": magazine.data.publishDate.toISOString(),
        "inLanguage": "en"
      }
    }))
  }
};
---

<!-- SEO Meta Tags -->
<title>{seoTitle}</title>
<meta name="description" content={seoDescription} />
<meta name="keywords" content="literary magazine, poetry, prose, visual arts, creative writing, borderline litmag" />
<link rel="canonical" href={canonicalURL.toString()} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL.toString()} />
<meta property="og:title" content={seoTitle} />
<meta property="og:description" content={seoDescription} />
<meta property="og:image" content={new URL("/src/assets/magazine.png", baseURL).toString()} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL.toString()} />
<meta property="twitter:title" content={seoTitle} />
<meta property="twitter:description" content={seoDescription} />
<meta property="twitter:image" content={new URL("/src/assets/magazine.png", baseURL).toString()} />

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<LayoutHeader>
  <Header />
  <section class="relative overflow-hidden">
    <div
      class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,#fff,rgba(255,255,255,0.6))] -z-10"
    >
    </div>
    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 md:pt-20 pb-16 sm:pb-20 md:pb-24"
    >
      <div class="text-left">
        <div
          class="flex flex-col md:flex-row items-center justify-between gap-8 md:gap-12"
        >
          <div class="w-full md:w-1/2 text-left md:text-start">
            <h1
              class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight theta-text-dark inknut-antiqua-bold"
            >
              Magazine <br />
            </h1>

            <p
              class="text-lg sm:text-xl md:text-2xl mb-8 max-w-none md:max-w-2xl mx-auto md:mx-0 leading-relaxed theta-text-dark px-4 md:px-0"
            >
              A collaborative space reshaping the connections within the litmag
              community. Read our past volumes, featuring visual arts, poetry
              and prose from creatives around the globe.
            </p>
          </div>
          <div
            class="w-full md:w-1/2 flex justify-center md:justify-end items-center flex-col"
          >
            <div class="relative">
              <Image
                src={MagazineImg}
                alt="ThetaHarpia - Sistema de gestão para psicólogos demonstrando funcionalidades de agendamento"
                class="w-full h-auto object-cover rounded-lg"
                width={480}
                height={270}
                loading="eager"
                format="webp"
                fetchpriority="high"
              />
              <!-- <div class="absolute inset-0 rounded-lg bg-gradient-to-tr from-transparent via-transparent to-white/10 pointer-events-none"></div> -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 md:pt-20 pb-16 sm:pb-20 md:pb-24"
    >
      <h3 class="text-2xl font-bold mb-6 inknut-antiqua-bold">Available volumes</h3>
      
      <!-- Search and Filter Component -->
      <MagazineSearch magazines={magazines} />
      
      <div class="grid grid-cols-3 gap-6">
        {magazines.map((magazine) => (
          magazine.data.volume === 1 ? (
            <a 
              href={`/magazine/${magazine.slug}`}
              class="block group"
            >
              <Image
                src={magazine.data.coverImage}
                alt={magazine.data.title}
                class="w-full aspect-[3/4] object-cover rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 group-hover:scale-105"
                width={300}
                height={400}
                loading="lazy"
                format="webp"
              />
            </a>
          ) : (
            <div class="block group">
              <Image
                src={magazine.data.coverImage}
                alt={magazine.data.title}
                class="w-full aspect-[3/4] object-cover rounded-lg shadow-lg"
                width={300}
                height={400}
                loading="lazy"
                format="webp"
              />
            </div>
          )
        ))}
  </section>



</LayoutHeader>
