---
import { Image } from "astro:assets";
import Header from "../components/Header.astro";
import LayoutHeader from "../layouts/LayoutHeader.astro";
import ZineCover from "../assets/zine-cover.png";

// SEO data
const seoTitle = "Free Paper Zine | Borderline Litmag";
const seoDescription = "Reflect on your creative year and record your next aspirations with this free paper zine from the borderline litmag! Download, print, fold, and get creative.";
const baseURL = Astro.site || "https://borderlinemag.netlify.app";
const canonicalURL = new URL("/zine", baseURL);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CreativeWork",
  "name": seoTitle,
  "description": seoDescription,
  "url": canonicalURL.toString(),
  "inLanguage": "en"
};
---

<!-- SEO Meta Tags -->
<title>{seoTitle}</title>
<meta name="description" content={seoDescription} />
<meta name="keywords" content="free zine, paper zine, creative zine, borderline litmag, download zine, printable zine" />
<link rel="canonical" href={canonicalURL.toString()} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL.toString()} />
<meta property="og:title" content={seoTitle} />
<meta property="og:description" content={seoDescription} />
<meta property="og:image" content={new URL(ZineCover.src, baseURL).toString()} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL.toString()} />
<meta property="twitter:title" content={seoTitle} />
<meta property="twitter:description" content={seoDescription} />
<meta property="twitter:image" content={new URL(ZineCover.src, baseURL).toString()} />

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<LayoutHeader>
  <Header />
  <section class="relative overflow-hidden">
    <div
      class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,#fff,rgba(255,255,255,0.6))] -z-10"
    >
    </div>
    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 md:pt-20 pb-16 sm:pb-20 md:pb-24"
    >
      <div class="text-left">
        <div
          class="flex flex-col md:flex-row items-center justify-between gap-8 md:gap-12"
        >
          <div class="w-full md:w-1/2 text-left md:text-start">
            <h1
              class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight theta-text-dark inknut-antiqua-bold"
            >
              Zine <br />
            </h1>

            <p
              class="text-lg sm:text-xl md:text-2xl mb-8 max-w-none md:max-w-2xl mx-auto md:mx-0 leading-relaxed theta-text-dark px-4 md:px-0"
            >
              Reflect on your creative year and record your next aspirations with this free paper zine from the borderline litmag! Download, print, fold, and get creative.
            </p>

            <!-- Download Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 px-4 md:px-0 mt-6 sm:mt-8">
              <a
                href="/zine.pdf"
                download
                class="inline-flex items-center justify-center px-5 py-2.5 sm:px-6 sm:py-3 bg-gray-900 text-white rounded-md hover:bg-gray-800 transition-colors duration-200 font-medium text-sm sm:text-base md:text-lg w-full sm:w-auto"
              >
                <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <span>Download PDF</span>
              </a>
              <a
                href="https://drive.google.com/file/d/1SSBKlkMIykmaceHUiuKs8zZMf0Sn9dbt/view?usp=sharing"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center px-5 py-2.5 sm:px-6 sm:py-3 bg-white border-2 border-gray-900 text-gray-900 rounded-md hover:bg-gray-50 transition-colors duration-200 font-medium text-sm sm:text-base md:text-lg w-full sm:w-auto"
              >
                <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                <span>View on Google Drive</span>
              </a>
            </div>
          </div>
          <div
            class="w-full md:w-1/2 flex justify-center md:justify-end items-center flex-col mt-8 md:mt-0"
          >
            <div class="relative max-w-md w-full">
              <Image
                src={ZineCover}
                alt="Borderline Litmag Free Paper Zine Cover"
                class="w-full h-auto object-contain rounded-sm shadow-lg"
                width={600}
                height={800}
                loading="eager"
                format="webp"
                fetchpriority="high"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</LayoutHeader>

<style>
  .bg-grid-slate-100 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(15 23 42 / 0.02)'%3e%3cpath d='m0 .5 32 0M.5 0l0 32'/%3e%3c/svg%3e");
  }
</style>

